const withState = BaseComponent =>
  class BaseComponentWithState extends React.Component {
    static defaultProps = {
      onChange: () => {}
    }

    state = {value: this.props.value || ''}

    handleChange = (e, {value, name}) => {
      const {onChange} = this.props
      this.setState({value})
      onChange({[name]: value})
    }
    render() {
      const {value} = this.state
      const {handleChange, props} = this
      return <BaseComponent {...props} value={value} onChange={handleChange} />
    }
  }

const stylesSection = {
  border: '1px solid #CCC',
  background: '#fff',
  marginTop: '10px',
  padding: '10px'
}

const AtomTextareaWithState = withState(AtomTextarea)

return (
  <div>
    <h1>Text-area</h1>
    <p className="sui-Studio-h4">The Textarea component allows you to easily create multi-line text inputs. AtomTextarea is a component that wraps a textarea displaying the text passed in the `value` prop</p>
    <div className="sui-Studio-wrapper--light">
      <h2 className="sui-Studio-h2">Basic Usage</h2>
      <p>
        <code>Short</code> <em>size</em> by default
      </p>
      <div style={stylesSection}>
        <AtomTextareaWithState
          name="textarea-1"
          value="Saul Bass on failure: Failure is built into creativity"
          onChange={console.log}
        />
      </div>
    </div>
    <div className="sui-Studio-wrapper--light">
      <h2 className="sui-Studio-h2">Long size</h2>
      <div style={stylesSection}>
        <AtomTextareaWithState
          name="textarea-2"
          value="Saul Bass on failure: Failure is built into creativity"
          size="long"
          onChange={console.log}
        />
      </div>
    </div>
    <div className="sui-Studio-wrapper--light">
      <h2 className="sui-Studio-h2">Disabled</h2>
      <div style={stylesSection}>
        <AtomTextareaWithState
          name="textarea-3"
          value="Saul Bass on failure: Failure is built into creativity"
          disabled
          onChange={console.log}
        />
      </div>
    </div>
    <div className="sui-Studio-wrapper--light">
      <h2 className="sui-Studio-h2">Placeholder</h2>
      <div style={stylesSection}>
        <AtomTextareaWithState
          name="textarea-4"
          placeholder="Write something cool here..."
          onChange={console.log}
        />
      </div>
    </div>
    <div className="sui-Studio-wrapper--light">
      <h2 className="sui-Studio-h2">States</h2>
      <div style={stylesSection}>
        <h3>Success</h3>
        <AtomTextareaWithState
          name="textarea-4"
          placeholder="Write something cool here..."
          onChange={console.log}
          state="success"
        />
        <h3>Error</h3>
        <AtomTextareaWithState
          name="textarea-4"
          placeholder="Write something cool here..."
          onChange={console.log}
          state="error"
        />
        <h3>Alert</h3>
        <AtomTextareaWithState
          name="textarea-4"
          placeholder="Write something cool here..."
          onChange={console.log}
          state="alert"
        />
      </div>
    </div>
  </div>
)
